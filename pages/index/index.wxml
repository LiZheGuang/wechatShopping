<view class='onSearchClass'>
<van-search
  value="{{ value }}"
  placeholder="请输入搜索关键词"
  use-action-slot
  bind:search="onSearch"
>

  <view slot="action" bind:tap="onSearch">搜索</view>
</van-search>
</view>


<block wx:for="{{commodity.list}}">
  <van-card  class="listBox" price="{{item.promotionPrice / 100}}" desc="{{item.describe}}" origin-price="{{item.marketRprice}}" title="{{item.title}}" thumb="{{imageUrl}}"
  />
  
</block>